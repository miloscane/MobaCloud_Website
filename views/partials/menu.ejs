<div id="menu" class="primaryMenu">
	<div class="contentWidth">
		<div class="logo">
			<img src="<%=bucket%>/images/mobatecLogo.svg">
		</div>
		<div class="menu">
			<div class="menuItem" onclick="scrollToSection('home')">Over ons</div>
			<div class="menuItem"><a href="/demo">Demo</a></div>
			<div class="menuItem" onclick="scrollToSection('license')">Licenties</div>
			<div class="menuItem" onclick="scrollToSection('testimonials')">Testimonials</div>
			<div class="contactPhoneButton">CONTACT</div>
		</div>
		<div class="responsiveHandle" id="responsive-menu-handle" onclick="openMenu(this)">
			<div class="wrap">
				<div class="topBar bar"></div>
				<div class="middleBar bar"></div>
				<div class="bottomBar bar"></div>
			</div>
		</div>
		<script>
			function openMenu(elem){
				var menu = elem.parentElement.getElementsByClassName("menu")[0];
				if(elem.dataset.opened==1){
					//zatvori meni
					menu.classList.remove(menu.classList[0]+"Active");
					elem.classList.remove(elem.classList[0]+"Active");
					elem.dataset.opened = 0;
				}else{
					//Otvori meni
					menu.classList.add(menu.classList[0]+"Active");
					elem.classList.add(elem.classList[0]+"Active");
					elem.dataset.opened = 1;
				}
			}

			function scrollToSection(sectionId){
				if(document.getElementById(sectionId)){
					document.getElementById(sectionId).scrollIntoView({ block: 'start',  behavior: 'smooth' });
					if(document.getElementById("responsive-menu-handle").dataset.opened==1){
						openMenu(document.getElementById("responsive-menu-handle"))
					}
				}else{
					console.log("Couldn't find section to scroll to")
				}
			}
		</script>
		<div class="contact">
			<div class="button">Contact</div>
		</div>
	</div>
</div>